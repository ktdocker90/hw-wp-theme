<rss version="2.0"
     xmlns:skin="http://hoangweb.com/export/1.0/skin/"
     xmlns:hw="http://hoangweb.com/export/1.0/"
     xmlns:wp="http://wordpress.org/export/1.2/"
        >
    <hw:hw-any-widget-classes>
        <!-- normal hw wxr data (do it in theme.xml) -->
        <sidebars>
            <hw:sidebar name="sidebar 1" skin="skin1">
                <param name="id"></param>
                <param name="before_widget"><![CDATA[<div id="%1$s" class="boxtourhome %2$s *1" >]]></param>
                <param name="after_widget"><![CDATA[</div>]]></param>
                <param name="before_title"><![CDATA[<h2 class="titteA" style="%1$s {css_title}">]]></param>
                <param name="after_title"><![CDATA[</h2>]]></param>

            </hw:sidebar>
        </sidebars>
        <posts>
            <!-- dynamic sidebar -->
            <item update="1">
                <wp:title>sidebar 1</wp:title>
                <hw:meta name="enable">1</hw:meta>
                <hw:meta name="query_data_and">

                    <params>
                        <param name="act">post_types</param>
                        <param name="compare">==</param>
                        <param name="act_values">post</param>
                    </params>

                </hw:meta>
                <hw:meta name="query_data_or">
                    <!-- because this context is array -->
                    <params>
                        <param name="act">templates</param>
                        <param name="compare">==</param>
                        <param name="act_values">single</param>
                    </params>

                </hw:meta>
                <hw:meta name="hw_sidebar_data">sidebar-left</hw:meta>
                <hw:meta name="sidebar-left">sidebar-right</hw:meta>
                <hw:meta name="sidebar-left">sidebar-right</hw:meta>

            </item>
        </posts>
        <!-- options (mine creative) -->
        <options>
            <option sidebar="sidebar-1" type="sidebar_setting">
                <hw:skin name="skin_default">
                    <skin:skin_name><![CDATA[skin1]]></skin:skin_name>
                    <skin:skin_type>file</skin:skin_type>
                    <skin:instance>awc</skin:instance>
                    <skin:source>plugin</skin:source>
                    <skin:options></skin:options>
                </hw:skin>

                <hw:skin name="skin1">
                    <skin:skin_name><![CDATA[skin2]]></skin:skin_name>
                    <skin:skin_type>file</skin:skin_type>
                    <skin:instance>awc</skin:instance>
                    <skin:source>plugin</skin:source>
                </hw:skin>
            </option>
            <option type="sidebar_position">
                <hw:params>
                    <param name="sidebar-1"><![CDATA[before_footer]]></param>
                    <param name="sidebar-2"><![CDATA[before_footer]]></param>
                </hw:params>
            </option>
        </options>
    </hw:hw-any-widget-classes>
</rss>